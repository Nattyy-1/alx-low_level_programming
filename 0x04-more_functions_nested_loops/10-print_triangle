#include "main.h"

/**
 * print_triangle - prints a triangle
 * @size: the size of the triangle
 */
void print_triangle(int size)
{
	if (size <= 0)
	{
		_putchar('\n');
		return;
	}

	int i;

	for (i = 0; i < size; i++)
	{
		int j;
		int k;

		for (j = 0; j < size - i - 1; j++)
		{
			_putchar(' ');
		}

		for (k = 0; k < i + 1; k++)
		{
			_putchar('#');
		}

		_putchar('\n');
	}
}
